<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chapterOneColor"
    tools:context=".RSQOne">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapter1Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="28dp"
                android:text="Chapter 1 Reading/Speaking" />

            <TextView
                android:id="@+id/chapter1_Reading1"
                android:layout_width="321dp"
                android:layout_height="88dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="32dp"
                android:text="When you are well,see your doctor for a _(1)_. Your doctor will look for problems you do not see or feel. Finding a health problem early may save your life." />

            <TextView
                android:id="@+id/chapter1_Reading2"
                android:layout_width="249dp"
                android:layout_height="102dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:text="When you are sick, go to your _(2)_. Your primary care center is the place you go for all your basic health care needs. Call your primary care center to make an _(3)_." />

            <TextView
                android:id="@+id/chapter1_Reading3"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:text="When you have an _(4)_, go to the hospital emergency room or call 911. An emergency is when you have a serious medical problem that needs to be addressed right away." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ch1_prompt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="1." />

                <Spinner
                    android:id="@+id/ch1_rq_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/rq_choices_ch1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ch1_prompt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="2." />

                <Spinner
                    android:id="@+id/ch1_rq_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/rq_choices_ch1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ch1_prompt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="3." />

                <Spinner
                    android:id="@+id/ch1_rq_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/rq_choices_ch1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ch1_prompt4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="4." />

                <Spinner
                    android:id="@+id/ch1_rq_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/rq_choices_ch1" />
            </LinearLayout>

            <Button
                android:id="@+id/ch1_RQSubmitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Answers" />

            <TextView
                android:id="@+id/ch1_speaking_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="28dp"
                android:text="Dialogue: Practice" />

            <TextView
                android:id="@+id/health_center_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:text="Health Center: Hello, health center. How may I help you?" />

            <TextView
                android:id="@+id/health_center_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: Hello, this is (YOUR NAME). I want to make an appointment." />
            <TextView
                android:id="@+id/health_center_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Health Center: How do you spell your name?" />
            <TextView
                android:id="@+id/health_center_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: (SPELL YOUR NAME)?" />
            <TextView
                android:id="@+id/health_center_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Health Center: What is the problem?" />
            <TextView
                android:id="@+id/health_center_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: I have a headache and a sore throat." />
            <TextView
                android:id="@+id/health_center_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Health Center: Do you have a fever?" />
            <TextView
                android:id="@+id/health_center_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: No, I don't." />
            <TextView
                android:id="@+id/health_center_9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Health Center: Okay, come in tomorrow at 10 AM" />
            <TextView
                android:id="@+id/health_center_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="44dp"
                android:text="Patient: Thank you." />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>