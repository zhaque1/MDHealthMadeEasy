<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/chapterTwoColor"
    tools:context=".RSQTwo">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/chapter2Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="28dp"
                android:text="Chapter 2 Reading/Speaking" />

            <TextView
                android:id="@+id/chapter2_Reading1"
                android:layout_width="321dp"
                android:layout_height="88dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="32dp"
                android:text="What are your _(1)_? Before you go to the doctor, practice describing your symptoms in English. Practice with a friend or family member." />

            <TextView
                android:id="@+id/chapter2_Reading2"
                android:layout_width="249dp"
                android:layout_height="102dp"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:text="What _(2)_do you take? Before you go to the doctor, write down the names of medicines you take and how much you take each day. Give this list to your doctor. Or you can bring you medicines with you and show them to your doctor." />

            <TextView
                android:id="@+id/chapter2_Reading3"
                android:layout_width="296dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:text="What is your _(3)_? Your health history is the health problems you have now or had in the past. Your doctor will ask you to fill out a health history form." />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ch2_prompt1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="1." />

                <Spinner
                    android:id="@+id/ch2_rq_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/rq_choices_ch2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ch2_prompt2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="2." />

                <Spinner
                    android:id="@+id/ch2_rq_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/rq_choices_ch2" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/ch2_prompt3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="3." />

                <Spinner
                    android:id="@+id/ch2_rq_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_marginTop="24dp"
                    android:entries="@array/rq_choices_ch2" />
            </LinearLayout>

            <Button
                android:id="@+id/ch2_RQSubmitBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Answers" />

            <TextView
                android:id="@+id/ch2_speaking_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="95dp"
                android:layout_marginTop="28dp"
                android:text="Dialogue: Practice" />

            <TextView
                android:id="@+id/doctor_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="24dp"
                android:text="Doctor: Hello, my name is Dr.Weston, How may I help you?" />

            <TextView
                android:id="@+id/doctor_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: I have pain in my back" />
            <TextView
                android:id="@+id/doctor_3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Doctor: Do you have any other symptoms?" />
            <TextView
                android:id="@+id/doctor_4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: Yes, it hurts when I walk. What is causing my back pain?" />
            <TextView
                android:id="@+id/doctor_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Doctor: I can you give some medicine to help. Take it 2 times a day" />
            <TextView
                android:id="@+id/doctor_6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: How long should i take the medicine?" />
            <TextView
                android:id="@+id/doctor_7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Doctor: Take all the medicine. It should last about 1 week?" />
            <TextView
                android:id="@+id/doctor_8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="44dp"
                android:layout_marginTop="12dp"
                android:text="Patient: Thank you, doctor." />
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>